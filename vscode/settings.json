{
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,

  "diffEditor.ignoreTrimWhitespace": false,
  "debug.toolBarLocation": "docked",
  "editor.emptySelectionClipboard": false,
  "editor.fontFamily": "Dank Mono, Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 18,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.lineHeight": 24,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.quickSuggestionsDelay": 0,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80],
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "blade.php": "html",
    "vue": "html"
  },
  "explorer.openEditors.visible": 0,
  "extensions.autoUpdate": false,
  "files.associations": {
    ".php_cs": "php",
    ".php_cs.dist": "php",
    "*.php": "php"
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,
  "[dockerfile]": {
    "editor.formatOnSave": false
  },
  "[jsonc]": {
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "html.format.enable": true,
  "html.format.wrapAttributes": "force-aligned",
  "html.format.wrapLineLength": 0,
  "html.format.extraLiners": "",
  "html.format.unformatted": "wbr,link,meta",
  "search.location": "panel",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.fontFamily": "Dank Mono, Hack Nerd Font",
  "terminal.integrated.fontSize": 14,
  "workbench.colorTheme": "Dark+ Mono",
  "workbench.fontAliasing": "antialiased",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",

  "javascript.implicitProjectConfig.checkJs": true,
  "typescript.suggest.autoImports": false,
  "npm.enableScriptExplorer": true,

  // remove statusbar (at least unused ones)
  "workbench.statusBar.feedback.visible": false,
  "cSpell.showStatus": false,
  "tsimporter.noStatusBar": true,

  "auto-close-tag.SublimeText3Mode": true,

  "php.suggest.basic": false,
  "intelephense.completionProvider.addUseDeclaration": true,
  "intelephense.completionProvider.backslashPrefix": false,
  "C_Cpp.intelliSenseEngine": "Default",
  "csharp.suppressDotnetInstallWarning": true,
  "cSpell.userWords": [
    "fico",
    "injectable",
    "ngrx",
    "personalization",
    "personalizations",
    "shopify"
  ],
  "tslint.jsEnable": true,
  "tslint.packageManager": "yarn",

  "code-runner.enableAppInsights": false,

  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": true,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": false,
    "suppressWelcomeNotice": true
  },

  "multiCommand.commands": [
    {
      "command": "multiCommand.makeRoom",
      "sequence": [
        "workbench.action.toggleActivityBarVisibility",
        "workbench.action.toggleSidebarVisibility",
      ]
    }
  ],

  "prettier.arrowParens": "avoid",
  "prettier.printWidth": 100,
  "prettier.disableLanguages": ["angular", "html", "vue"],
  "prettier.proseWrap": "preserve",
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.useTabs": false,
  "prettier.tabWidth": 2,
  "prettier.requireConfig": true,

  "vetur.format.defaultFormatter.html": "none",

  "projects.useTilde": true,

  "color-highlight.markerType": "outline",
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "todo",
      "color": "#ffbd2a",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "fixme",
      "color": "#fff",
      "strikethrough": false,
      "backgroundColor": "#f06292"
    },
    {
      "tag": "hack",
      "color": "#FF3D00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "note",
      "color": "#009688",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "backgroundColor": "transparent"
    }
  ],

  "gitlens.historyExplorer.enabled": true,
  "nativescript.analytics.enabled": false,
  "htmlhint.options": {
    "tagname-lowercase": false,
    "attr-lowercase": false
  }
}
