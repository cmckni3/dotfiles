{
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "update.mode": "manual",

  "diffEditor.ignoreTrimWhitespace": false,
  "debug.toolBarLocation": "docked",
  "editor.emptySelectionClipboard": false,
  "editor.fontFamily": "Dank Mono, Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 18,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.lineHeight": 24,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.quickSuggestionsDelay": 0,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80],
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "blade.php": "html",
    "vue": "html"
  },
  "explorer.openEditors.visible": 0,
  "extensions.autoUpdate": false,
  "files.associations": {
    ".php_cs": "php",
    ".php_cs.dist": "php",
    "*.php": "php"
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,
  "formattingToggle.affects": [
    "formatOnPaste",
    "formatOnSave",
  ],
  "[dockerfile]": {
    "editor.formatOnSave": false
  },
  "[jsonc]": {
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "html.format.enable": true,
  "html.format.wrapAttributes": "force-aligned",
  "html.format.wrapLineLength": 0,
  "html.format.extraLiners": "",
  "html.format.unformatted": "wbr,link,meta",
  "html.format.indentInnerHtml": true,
  "html.format.indentHandlebars": true,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.fontFamily": "Dank Mono, Hack Nerd Font",
  "terminal.integrated.fontSize": 14,
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Dark+ Mono",
  "workbench.fontAliasing": "antialiased",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",

  "javascript.implicitProjectConfig.checkJs": true,
  "typescript.suggest.autoImports": false,

  // remove statusbar (at least unused ones)
  "cSpell.showStatus": false,
  "tsimporter.noStatusBar": true,

  "auto-close-tag.SublimeText3Mode": true,

  "aws.samcli.location": "/usr/local/bin/sam",
  "php.suggest.basic": false,
  "C_Cpp.intelliSenseEngine": "Default",
  "csharp.suppressDotnetInstallWarning": true,
  "cSpell.language": "en",
  "cSpell.userWords": [
    "amazonaws",
    "amzn",
    "apigateway",
    "appsync",
    "autoscale",
    "backoff",
    "boostlink",
    "boostlinks",
    "cidr",
    "cjis",
    "cloudformation",
    "cloudfront",
    "cloudtrail",
    "cloudwatch",
    "cognito",
    "cooldown",
    "datasync",
    "datatable",
    "deduplication",
    "dynamodb",
    "endregion",
    "entrypoint",
    "etag",
    "fargate",
    "fico",
    "filesize",
    "flatpickr",
    "geocode",
    "geolocation",
    "graphql",
    "hipaa",
    "injectable",
    "iolap",
    "lifecycle",
    "mediainfo",
    "microservice",
    "microservices",
    "ngrx",
    "nist",
    "nofollow",
    "nonnegligent",
    "personalization",
    "personalizations",
    "presale",
    "quicksight",
    "quickstart",
    "quicktime",
    "recaptcha",
    "rekognition",
    "runtimes",
    "secretsmanager",
    "shopify",
    "sortablejs",
    "subnet",
    "subnets",
    "traefik",
    "uploader",
    "upsert",
    "websockets"
  ],
  "tslint.jsEnable": true,
  "tslint.packageManager": "yarn",

  "code-runner.enableAppInsights": false,

  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": true,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": false,
    "suppressWelcomeNotice": true
  },

  "multiCommand.commands": [
    {
      "command": "multiCommand.makeRoom",
      "sequence": [
        "workbench.action.toggleActivityBarVisibility",
        "workbench.action.toggleSidebarVisibility",
      ]
    }
  ],

  "vetur.format.defaultFormatter.html": "none",

  "projects.useTilde": true,

  "color-highlight.markerType": "outline",
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "todo",
      "color": "#ffbd2a",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "fixme",
      "color": "#fff",
      "strikethrough": false,
      "backgroundColor": "#f06292"
    },
    {
      "tag": "hack",
      "color": "#FF3D00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "note",
      "color": "#009688",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "backgroundColor": "transparent"
    }
  ],

  "htmlhint.options": {
    "tagname-lowercase": false,
    "attr-lowercase": false
  }
}
